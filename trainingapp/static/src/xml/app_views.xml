<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <t t-name="trainingapp.foo">
    <t t-foreach="widget.trainings" t-as="train">
      <span t-esc="train.training_plan_detail_name" />
    </t>
  </t>

  <t t-name="trainingapp.app">
    <main role="main" class="container">
      <div class="container-fluid">
        <div class="row mb-3 o_training_dashboard" />
        <div class="o_content o_training_list pb32"/>
    </div>
    </main>
  </t>

  <t t-name="trainingapp.list">
    <t t-if="widget.trainings.length">
      <div id="accordion">
      <t t-foreach="widget.trainings" t-as="training">
          <div class="card">
            <div class="card-header" t-attf-id="heading#{training.id}">
              <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" t-attf-data-target="#collapse#{training.id}"
                  aria-expanded="true" t-attf-aria-controls="collapse#{training.id}">
                  <span t-esc="training.name" />
                  <span class="fa-stack">
                    <span class="fa fa-circle-o fa-stack-2x" />
                    <span class="fa-stack-1x">2</span>
                   </span>
                </button>
              </h5>
            </div>
          </div>

          <div t-attf-id="collapse#{training.id}" class="collapse"
            t-attf-aria-labelledby="heading#{training.id}" data-parent="#accordion">
            <div class="card-body" style="background-color: #f2f2f296;">
              <t t-call="trainingapp.training_cards" />
            </div>
          </div>
      </t>
      </div>
    </t>
    <t t-else="">
      <h1 class="o_traininglist_empty">No trainings to display</h1>
    </t>
  </t>

  <!-- Q2cvrnrG34s -->
  <!-- http://img.youtube.com/vi/Q2cvrnrG34s/default.jpg --> 
  <t t-name="trainingapp.training_cards">
    <div class="row" >
      <div class="col-md-6 col-xs-12 py-2">
        <div class="card">
          <a href="#1">
            <div class="card-header" style="background-color: #ffffff;" >
              <strong>Training Title</strong>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <img class="img-fluid" src="http://img.youtube.com/vi/Q2cvrnrG34s/default.jpg" />
                </div>
                <div class="col">
                  <div>
                    Credits: 1
                  </div>
                  <div>
                    Deadline: Jan 2, 2020
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>

    <!-- For effect -->
      <div class="col-md-6 col-xs-12 py-2">
        <div class="card">
          <a href="#2">
            <div class="card-header" style="background-color: #ffffff;" >
              <strong>Training Title</strong>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <img class="img-fluid" src="http://img.youtube.com/vi/Q2cvrnrG34s/default.jpg" />
                </div>
                <div class="col">
                  <div>
                    Credits: 1
                  </div>
                  <div>
                    Deadline: Jan 2, 2020
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>

    </div>
  </t>

  <t t-name="trainingapp.dashboard">
    <!-- Full Screen Cards -->
    <div class="col-xl-4 col-xs-6 py-2 d-none d-md-block">
      <div class="card bg-primary text-white o_training_card o_all_trainings active">
        <input type="hidden" class="o_filter_key" value="all" />
        <div class="card-body bg-primary">
          <div class="rotate">
            <i class="fa fa-graduation-cap fa-4x" />
            <i class="fa fa-check-circle fa-3x pull-right" />
          </div>
          <h6 class="text-uppercase">
            Available Trainings
          </h6>
          <h1 class="display-4">
            <span t-esc="widget.stats.count_all" />
          </h1>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-xs-6 py-2 d-none d-md-block">
      <div class="card bg-danger text-white o_training_card o_my_odue_trainings">
        <input type="hidden" class="o_filter_key" value="odue" />
        <div class="card-body bg-danger">
          <div class="rotate">
            <i class="fa fa-exclamation-triangle fa-4x" />
            <i class="fa fa-check-circle fa-3x pull-right d-none" />
          </div>
          <h6 class="text-uppercase">
            My Overdue Assignments
          </h6>
          <h1 class="display-4">
            <span t-esc="widget.stats.count_my_odue" />
          </h1>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-xs-6 py-2 d-none d-md-block">
      <div class="card bg-success text-white o_training_card o_my_trainings">
        <input type="hidden" class="o_filter_key" value="my" />
        <div class="card-body bg-success">
          <div class="rotate">
            <i class="fa fa-user fa-4x" />
            <i class="fa fa-check-circle fa-3x pull-right d-none" />
          </div>
          <h6 class="text-uppercase">
            My Assignments
          </h6>
          <h1 class="display-4">
            <span t-esc="widget.stats.count_my" />
          </h1>
        </div>
      </div>
    </div>
    <!-- Mobile Cards -->
    <div class="col-xl-4 col-xs-6 py-2 d-block d-md-none">
      <div class="card bg-primary text-white o_training_card o_all_trainings active">
        <input type="hidden" class="o_filter_key" value="all" />
        <div class="card-body bg-primary">
          <h6 class="text-uppercase">
            <span t-esc="widget.stats.count_all" />
            <span>Available Trainings</span>
            <i class="fa fa-check-circle fa-3x pull-right" />
          </h6>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-xs-6 py-2 d-block d-md-none">
      <div class="card bg-danger text-white o_training_card o_my_odue_trainings">
        <input type="hidden" class="o_filter_key" value="odue" />
        <div class="card-body bg-danger">
          <h6 class="text-uppercase">
            <span t-esc="widget.stats.count_my_odue" />
            <span>My Overdue Trainings</span>
            <i class="fa fa-check-circle fa-3x pull-right d-none" />
          </h6>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-xs-6 py-2 d-block d-md-none">
      <div class="card bg-success text-white o_training_card o_my_trainings">
        <input type="hidden" class="o_filter_key" value="my" />
        <div class="card-body bg-success">
          <h6 class="text-uppercase">
            <span t-esc="widget.stats.count_my" />
            <span>My Trainings</span>
            <i class="fa fa-check-circle fa-3x pull-right d-none" />
          </h6>
        </div>
      </div>
    </div>
  </t>

</odoo>
